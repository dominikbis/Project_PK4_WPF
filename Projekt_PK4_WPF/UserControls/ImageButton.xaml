<UserControl x:Class="Projekt_PK4_WPF.ImageButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Projekt_PK4_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" x:Name="IB">

    <Grid>
        <Button Click="Button_Click">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Image Source="{Binding Path=ImageSource, ElementName=IB}"/>
                <TextBlock Text="{Binding Path=Text, ElementName=IB}"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
